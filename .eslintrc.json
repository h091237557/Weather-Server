{
    "env": {
        "commonjs": true,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "plugins": [
        "mocha"
    ],
    "extends": [
        "plugin:mocha/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "mocha/no-skipped-tests": "error",
        "mocha/no-exclusive-tests": "error",
        "mocha/no-mocha-arrows": "off",
        "mocha/no-hooks-for-single-case": "off"
    }
}
